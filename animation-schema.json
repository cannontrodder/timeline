{
    "title": "Timeline Animation Source",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "containerSelector": {
            "type": "string"
        },
        "animations": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "selector": {
                        "type": "string"
                    },
                    "initialState": {
                        "type": "object"
                    },
                    "transitions": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "properties": {
                                "transform": {
                                    "type": "object"
                                },
                                "options": {
                                    "type": "object"
                                }
                            },
                            "required": ["transform"]
                        }
                    },
                    "anchorOffset": {
                        "type": "integer"
                    },
                    "anchorItem": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "thisAnchorPoint": {
                                "type": "string",
                                "enum": [ "start", "end" ]
                            },
                            "targetAnchorPoint": {
                                "type": "string",
                                "enum": [ "start", "end" ]
                            }
                        },
                        "required": [ "name", "thisAnchorPoint", "targetAnchorPoint" ]
                    },
                    "paddingStart": {
                        "type": "integer"
                    },
                    "paddingEnd": {
                        "type": "integer"
                    }
                },
                "required": [ "name", "selector", "transitions" ]
            }
        }
    },
    "required": [ "title", "animations" ]
}
